#!/bin/bash
# searchdb

# Stop on errors
# See https://vaneyckt.io/posts/safer_bash_scripts_with_set_euxo_pipefail/
set -Eeuo pipefail
set -x

# Sanity check command line options
usage() {
  echo "Usage: $0 (create|destroy|reset)"
}

if [ $# -ne 1 ]; then
  usage
  exit 1
fi

DIR="var/search"
# Parse argument.  $1 is the first argument
case $1 in
  "create")
    # if database already exist, print error message
    if [ -d "$DIR" ]; then
        echo "Error: database already exists"
        exit 1
    else
        # else create one
        mkdir -p var/search
        sqlite3 var/search/search.sqlite3 < search_server/search/sql/search.sql
    fi
    ;;
  "destroy")
    rm -f var/search/search.sqlite3
    ;;
  "reset")
    rm -f var/search/search.sqlite3
    mkdir -p var/search
    sqlite3 var/search/search.sqlite3 < search_server/search/sql/search.sql
    ;;
  *)
    usage
    exit 1
    ;;
esac